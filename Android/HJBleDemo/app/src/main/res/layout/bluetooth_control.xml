<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/data_bytes_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin">

		<TextView
			android:id="@+id/send_byte_count_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:text="发送字节：0 Byte"/>

		<TextView
			android:id="@+id/receive_byte_count_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:textSize="10sp"
			android:text="接收字节：0 Byte"/>

	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/rate_layout"
		android:layout_below="@id/data_bytes_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin">

		<TextView
			android:id="@+id/send_rate_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="10sp"
			android:text="下发速率：0 B/s"/>

		<TextView
			android:id="@+id/receive_rate_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:textSize="10sp"
			android:text="接收速率：0 B/s"/>

	</RelativeLayout>


    
     <RelativeLayout
		 android:id="@+id/top_layout"
		 android:layout_below="@id/rate_layout"
		 android:layout_height="wrap_content"
		 android:layout_width="match_parent"
		 android:paddingLeft="@dimen/activity_horizontal_margin"
		 android:paddingRight="@dimen/activity_horizontal_margin"
		 android:paddingTop="@dimen/activity_vertical_margin"
		 android:paddingBottom="@dimen/activity_vertical_margin">
        
        <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_centerVertical="true"
	        android:layout_alignParentStart="true">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@android:color/black"
				android:text="日志：" />

		</LinearLayout>

		 <LinearLayout
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_alignParentEnd="true">

			 <TextView
				 android:id="@+id/test_btn"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:paddingTop="5dp"
				 android:paddingBottom="5dp"
				 android:paddingStart="8dp"
				 android:paddingEnd="8dp"
				 android:layout_marginEnd="10dp"
				 android:textColor="@android:color/white"
				 android:background="@drawable/button_background"
				 android:text="开始测试"/>

			 <TextView
				 android:id="@+id/clear_log"
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:paddingTop="5dp"
				 android:paddingBottom="5dp"
				 android:paddingStart="8dp"
				 android:paddingEnd="8dp"
				 android:textColor="@android:color/white"
				 android:background="@drawable/button_background"
				 android:text="清屏"/>

		 </LinearLayout>

    </RelativeLayout>

	<LinearLayout
		android:id="@+id/bottom_layout"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:layout_alignParentBottom="true">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="4">

			<EditText
				android:id="@+id/sendData"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@drawable/edit_background"
				android:hint="请输入十六进制数据"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1">

			<Button
				android:id="@+id/send"
				android:layout_marginLeft="5dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textColor="@android:color/white"
				android:background="@drawable/button_background"
				android:text="发送"/>

		</LinearLayout>

	</LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
		android:layout_above="@id/bottom_layout"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
    
	    <ScrollView 
	        android:id="@+id/scroll"
	        android:layout_weight="10"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:scrollbars="vertical">
	        
	      <LinearLayout
	            android:id="@+id/scroll_layout"
	            android:orientation="vertical"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">       
	            
	                
	        </LinearLayout>
	        
	    </ScrollView>
    
    </LinearLayout>


    


</RelativeLayout >
